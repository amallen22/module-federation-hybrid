{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@packages/ui-kit/*": ["packages/ui-kit/*"],
      "@packages/state/*": ["packages/state/*"],
      "@packages/services/*": ["packages/services/*"],
      "@apps/product/*": ["apps/product/*"],
      "@apps/shell/*": ["apps/shell/*"],
      "@apps/login/*": ["apps/login/*"],
    }
  },
  "include": ["vite.config.ts"]
}