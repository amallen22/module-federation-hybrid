{
    "env": {
        "amd": true,
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "CVStorage": "readonly",
        "JSX": true,
        "dataLayer": "readonly",
        "CV": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module",
        "requireConfigFile": true
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": 2020,
                "sourceType": "module",
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "plugins": ["@typescript-eslint"],
            "rules": {
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "argsIgnorePattern": "^_"
                    }
                ],
                "no-unused-vars": "off"
            }
        }
    ],
    "plugins": [
        "react",
        "babel",
        "simple-import-sort"
    ],
    "root": true,
    "rules": {
        "semi-spacing":"error",
        "comma-spacing": "error",
        "no-multi-spaces": "error",        
        "array-bracket-spacing":"error",
        "arrow-spacing": "error",
        "space-in-parens": "error",
        "object-curly-spacing": ["error", "always"],
        "babel/no-invalid-this": 0,
        "indent": [
            "error",
            4,
            {
                "flatTernaryExpressions": true,
                "MemberExpression": 0,
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": 0,
        "no-control-regex": 0,
        "no-empty": 0,
        "no-extra-boolean-cast": "off",
        "no-mixed-spaces-and-tabs": [
            "error",
            "smart-tabs"
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-useless-catch": "off",
        "no-useless-escape": 0,
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "react/display-name": 0,
        "react/jsx-no-target-blank": [
            1,
            {
                "enforceDynamicLinks": "never"
            }
        ],
        "react/no-array-index-key": "error",
        "react/no-children-prop": 0,
        "react/prop-types": 0,
        "semi": [
            "error",
            "always"
        ],
        "simple-import-sort/imports": ["error", {
            "groups": [
                // react > thirdparty > leadtech.
                ["^react", "^@?\\w", "@npm_leadtech"],
                // relative imports.
                ["^\\.\\.(?!/?$)", "^\\.\\./?$", "^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
                // styles
                ["^.+\\.s?css$"]
            ]
        }],        "react/no-unknown-property": 0,
        "no-prototype-builtins": 0
    },
    "settings": {
        "react": { // default to "createReactClass"
            "pragma": "React",
            "version": "detect"
        }
    }
}